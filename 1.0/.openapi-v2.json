{
  "openapi": "3.1.0",
  "info": {
    "title": "Customer Support API",
    "version": "1.0.0",
    "description": "OpenAPI schema for Customer Support API v1.0 endpoints."
  },
  "servers": [
    {
      "url": "https://amicoapps.com/customer-support/1.0",
      "description": "Production"
    }
  ],
  "security": [
    {
      "apiKey": []
    }
  ],
  "paths": {
    "/apps": {
      "get": {
        "summary": "List apps",
        "responses": {
          "200": {
            "description": "Apps",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AppsResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Error401"
          },
          "404": {
            "$ref": "#/components/responses/Error404"
          },
          "405": {
            "$ref": "#/components/responses/Error405"
          },
          "500": {
            "$ref": "#/components/responses/Error500"
          }
        }
      }
    },
    "/apps/{id}": {
      "get": {
        "summary": "Get app by id",
        "parameters": [
          {
            "$ref": "#/components/parameters/AppIdPath"
          }
        ],
        "responses": {
          "200": {
            "description": "App",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AppResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Error401"
          },
          "404": {
            "$ref": "#/components/responses/Error404"
          },
          "405": {
            "$ref": "#/components/responses/Error405"
          },
          "500": {
            "$ref": "#/components/responses/Error500"
          }
        }
      }
    },
    "/{app_id}/conversation": {
      "post": {
        "summary": "Create conversation response",
        "parameters": [
          {
            "$ref": "#/components/parameters/AppIdConversationPath"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConversationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Conversation response accepted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversationResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/Error400"
          },
          "401": {
            "$ref": "#/components/responses/Error401"
          },
          "404": {
            "$ref": "#/components/responses/Error404"
          },
          "405": {
            "$ref": "#/components/responses/Error405"
          },
          "500": {
            "$ref": "#/components/responses/Error500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      }
    },
    "parameters": {
      "AppIdPath": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "App identifier (for example: quitall)."
      },
      "AppIdConversationPath": {
        "name": "app_id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "App identifier for conversation endpoint."
      }
    },
    "responses": {
      "Error400": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "error": {
                "code": 400,
                "name": "BAD REQUEST",
                "reason": "Invalid Payload"
              },
              "status": 400,
              "success": false
            }
          }
        }
      },
      "Error401": {
        "description": "Unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "error": {
                "code": 401,
                "name": "UNAUTHORIZED",
                "reason": "Invalid API Key"
              },
              "status": 401,
              "success": false
            }
          }
        }
      },
      "Error404": {
        "description": "Not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "error": {
                "code": 404,
                "name": "NOT FOUND",
                "reason": "Invalid Endpoint"
              },
              "status": 404,
              "success": false
            }
          }
        }
      },
      "Error405": {
        "description": "Method not allowed",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "error": {
                "code": 405,
                "name": "NOT ALLOWED",
                "reason": "HTTP Method Not Allowed"
              },
              "status": 405,
              "success": false
            }
          }
        }
      },
      "Error500": {
        "description": "Internal error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "error": {
                "code": 500,
                "name": "INTERNAL ERROR",
                "reason": "Failed To Encode JSON Response"
              },
              "status": 500,
              "success": false
            }
          }
        }
      }
    },
    "schemas": {
      "SuccessBase": {
        "type": "object",
        "required": [
          "status",
          "success"
        ],
        "properties": {
          "status": {
            "type": "integer",
            "example": 200
          },
          "success": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "App": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "example": "quitall"
          },
          "bundle": {
            "type": [
              "string",
              "null"
            ],
            "example": "com.amicoapps.quitall"
          },
          "name": {
            "type": [
              "string",
              "null"
            ],
            "example": "QuitAll"
          },
          "instructions": {
            "type": [
              "string",
              "null"
            ],
            "example": "quitall-instructions.md"
          }
        }
      },
      "AppsResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/SuccessBase"
          },
          {
            "type": "object",
            "required": [
              "apps"
            ],
            "properties": {
              "apps": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/App"
                }
              }
            }
          }
        ]
      },
      "AppResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/SuccessBase"
          },
          {
            "type": "object",
            "required": [
              "app"
            ],
            "properties": {
              "app": {
                "$ref": "#/components/schemas/App"
              }
            }
          }
        ]
      },
      "ConversationRequest": {
        "type": "object",
        "required": [
          "role",
          "content"
        ],
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "system",
              "user"
            ]
          },
          "content": {
            "type": "string",
            "minLength": 1
          },
          "response": {
            "type": "object",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      },
      "ConversationResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/SuccessBase"
          },
          {
            "type": "object",
            "required": [
              "response"
            ],
            "properties": {
              "response": {
                "type": "object",
                "required": [
                  "app",
                  "content",
                  "role"
                ],
                "properties": {
                  "app": {
                    "type": "object",
                    "required": [
                      "id"
                    ],
                    "properties": {
                      "id": {
                        "type": "string"
                      }
                    }
                  },
                  "content": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string",
                    "enum": [
                      "system",
                      "user"
                    ]
                  },
                  "response": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "required": [
          "error",
          "status",
          "success"
        ],
        "properties": {
          "error": {
            "type": "object",
            "required": [
              "code",
              "name",
              "reason"
            ],
            "properties": {
              "code": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              }
            }
          },
          "status": {
            "type": "integer"
          },
          "success": {
            "type": "boolean",
            "enum": [
              false
            ]
          }
        }
      }
    }
  }
}
